<UserControl x:Class="DVS.Views.AddClothesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:components="clr-namespace:DVS.Components"
             mc:Ignorable="d" 
             d:DesignHeight="338"
             d:DesignWidth="203"
             Background="White"
             x:Name="_AddClothesView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text=" Kleidung Hinzufügen "
                   FontSize="19"
                   Margin="0 5 0 0"
                   HorizontalAlignment="Center" />

        <Grid Grid.Row="1" Grid.IsSharedSizeScope="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <components:ClothesCategorieCheckboxComponent Grid.Column="0" Margin="0 10 0 15"/>
                <components:ClothesSeasonChoiceComponent Grid.Column="1" Margin="0 10 0 15"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"
                                      SharedSizeGroup="Details" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Id:"
                           Margin="15 5 3 0"
                           Style="{StaticResource ModalTextStyle}" />

                <TextBox Grid.Column="1"
                         Height="15"
                         Width="111"
                         VerticalAlignment="Bottom"
                         HorizontalAlignment="Left"/>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"
                                      SharedSizeGroup="Details" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Name:"
                           Margin="15 5 3 0"
                           Style="{StaticResource ModalTextStyle}" />

                <TextBox Grid.Column="1"
                         Height="15"
                         Width="111"
                         VerticalAlignment="Bottom"
                         HorizontalAlignment="Left"/>
            </Grid>

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"
                                      SharedSizeGroup="Details" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Größe:"
                           Margin="15 5 3 0"
                           Style="{StaticResource ModalTextStyle}" />

                <TextBox Grid.Column="1"
                         Height="15"
                         Width="111"
                         VerticalAlignment="Bottom"
                         HorizontalAlignment="Left"/>
            </Grid>

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"
                                      SharedSizeGroup="Details" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Menge:"
                           Margin="15 5 3 0"
                           Style="{StaticResource ModalTextStyle}" />

                <TextBox Grid.Column="1"
                         Height="15"
                         Width="111"
                         VerticalAlignment="Bottom"
                         HorizontalAlignment="Left"/>
            </Grid>

            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"
                                      SharedSizeGroup="Details" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Kommentar:"
                           Margin="15 5 3 0"
                           Style="{StaticResource ModalTextStyle}" />

                <TextBox Grid.Column="1"
                         Height="15"
                         Width="111"
                         VerticalAlignment="Bottom"
                         HorizontalAlignment="Left"/>
            </Grid>

            <Grid Grid.Row="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <Button x:Name="EnterAddClothesCommand"
                        Grid.Column="0"
                        Content="Hinzufügen"
                        Style="{StaticResource ModalButtonStyle}"
                        Command="{Binding EnterAddClothesCommand}" />

                <Button x:Name="CancelAddClothesCommand"
                        Grid.Column="1"
                        Content="Abbrechen"
                        Style="{StaticResource ModalButtonStyle}"
                        Command="{Binding CancelAddClothesCommand}" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
