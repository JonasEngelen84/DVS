<UserControl x:Class="DVS.Views.AddEditCategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:components="clr-namespace:DVS.Components.Forms"
             mc:Ignorable="d">
    
    <Border Background="#FFDEDEDE">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!-- Title -->
            <Border Grid.Row="0"
                    Background="#FFBFBFBF">
                <TextBlock Text="Kategorie bearbeiten"
                           FontSize="28"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
            </Border>

            <!-- AddEditCategorieForm -->
            <components:AddEditCategoryForm Grid.Row="1"
                                            Margin="15 10 15 15"
                                            DataContext="{Binding AddEditCategoryFormViewModel}" />
        </Grid>
    </Border>
</UserControl>
