 <!--Durch ResourceDictionary.MergedDictionaries
    können mehrere selbst erstellte Dictionaries geladen werden.-->

<Application x:Class="DVS.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Dictionaries/Button/CircleButtonResourcesDictionary.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/Button/ModalButtonResourcesDictionary.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/Button/MenuItemResourcesDictionary.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/Button/DropDownMenuItemResourcesDictionary.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/Button/SubMenuItemResourcesDictionary.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/Button/TitleButtonResourcesDictionary.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/Button/ComboBoxButtonResourcesDictionary.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/ComboBoxResourcesDictionary.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/ModalTextResourcesDictionary.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/TextBoxResourcesDictionary.xaml" />
                <ResourceDictionary Source="Resources/Dictionaries/BorderDragClothesToEmployeeListView.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
