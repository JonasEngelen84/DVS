<Window x:Class="DVS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DVS.Views"
        xmlns:custom="clr-namespace:ModalControl;assembly=ModalControl"
        xmlns:vms="clr-namespace:DVS.ViewModels.AddViewModels"
        mc:Ignorable="d"
        Height="750"
        MinHeight="400"
        Width="1050"
        MinWidth="440"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        Icon="/Resources/Images/DVS Icon.png"
        MouseLeftButtonDown="WindowMouseLeftButtonDown">

    <!--<Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFCCCBCB" Offset="0" />
            <GradientStop Color="#FFDEDEDE" Offset="0.809" /> 
        </LinearGradientBrush>
    </Window.Background>-->

    <!--Festlegen des DataType der Modals-->
    <Window.Resources>
        <DataTemplate DataType="{x:Type vms:AddClothesViewModel}">
            <views:AddClothesView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vms:AddEmployeeViewModel}">
            <views:AddEmployeeView />
        </DataTemplate>
    </Window.Resources>

    <!--Background-->
    <Border CornerRadius="15"
            Background="#524E4F">
        <Border.Effect>
            <DropShadowEffect Color="#000000"
                              Opacity="0.5"
                              Direction="90"
                              ShadowDepth="2"
                              BlurRadius="35" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Titlebar -->
            <Border Height="35"
                    CornerRadius="15 15 0 0"
                    HorizontalAlignment="Stretch"
                    Background="#ffffff">

                <Grid>
                    <Image Source="/Resources/Images/DVS Icon.png"
                           Height="18"
                           Width="18"
                           HorizontalAlignment="Left"
                           Margin="7 0 0 0" />

                    <TextBlock Text="DVS"
                               FontSize="25"
                               VerticalAlignment="Center"
                               Margin="30 0 0 3" />
                    
                    <StackPanel Margin="0 0 10 0"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right">
                        <!-- Minimize Button -->
                        <Button x:Name="MinimizeApp"
                                Width="25"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="MinimizAppClick">
                            <Image Source="/Resources/Images/Minimize.png"
                                   Height="20"
                                   Width="20" />
                        </Button>

                        <!-- Fullscreen Button -->
                        <Button x:Name="FullscreenApp"
                                Width="25"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="FullscreenAppClick">
                            <Image Source="/Resources/Images/Maximize.png"
                                   Height="20"
                                   Width="20" />
                        </Button>

                        <!-- Close Button -->
                        <Button x:Name="CloseApp"
                                Width="25"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Click="CloseAppClick">
                            <Image Source="/Resources/Images/Close.png"
                                   Height="20"
                                   Width="20" />
                        </Button>
                    </StackPanel>

                    
                </Grid>
            </Border>

            <!-- App Menu rechts -->
            <!--<Border Grid.Row="0"
                    Height="25"
                    Width="105"
                    CornerRadius="10"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0 5 10 2"
                    Background="#363435">

                <Grid>
                    <Menu Height="20"
                          Width="96"
                          Background="#363435"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center">

                        
                    </Menu>
                </Grid>
            </Border>-->

            <!--Implementierung des NuGet Pakets "SimpleModal.WPF" zur Steuerung der Modals-->
            <custom:Modal Grid.Row="1"
                          Panel.ZIndex="1"
                          IsOpen="{Binding IsModalOpen}">
                <ContentControl Content="{Binding CurrentModalViewModel}" />
            </custom:Modal>

            <!-- Implementierung DVSView-->
            <views:DVSView Grid.Row="1"
                           Margin="10,1,10,10"
                           DataContext="{Binding DVSViewModel}" />

        </Grid>
    </Border>


</Window>
