<Window x:Class="DVS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DVS.Views"
        xmlns:custom="clr-namespace:ModalControl;assembly=ModalControl"
        xmlns:vms="clr-namespace:DVS.ViewModels.AddViewModels"
        mc:Ignorable="d"
        
        Title="DVS"
        Height="800"
        MinHeight="400"
        Width="1100"
        MinWidth="440"
        WindowStartupLocation="CenterScreen"
        Icon="/Images/DVS Icon.png">

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFCCCBCB" Offset="0" />
            <GradientStop Color="#FFDEDEDE" Offset="0.809" />
        </LinearGradientBrush>
    </Window.Background>

    <!--Festlegen des DataType für AddClothesView-->
    <Window.Resources>
        <DataTemplate DataType="{x:Type vms:AddClothesViewModel}">
            <views:AddClothesView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vms:AddEmployeeViewModel}">
            <views:AddEmployeeView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <!--Implementierung des NuGet Pakets "SimpleModal.WPF" zur Steuerung der Modals-->
        <custom:Modal Panel.ZIndex="1" IsOpen="{Binding IsModalOpen}">
            <ContentControl Margin="0" Content="{Binding CurrentModalViewModel}" />
        </custom:Modal>
        
        <views:DVSView Margin="10,1,10,10" DataContext="{Binding DVSViewModel}"/>
    </Grid>
</Window>
