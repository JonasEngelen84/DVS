<Window x:Class="DVS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DVS.Views"
        xmlns:vms="clr-namespace:DVS.ViewModels"
        mc:Ignorable="d"
        Title="DVS"
        Height="800"
        MinHeight="400"
        Width="1100"
        MinWidth="400"
        WindowStartupLocation="CenterScreen"
        Icon="/Images/DVS Icon.png">

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFCCCBCB" Offset="0" />
            <GradientStop Color="#FFDEDEDE" Offset="0.809" />
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="10,1,10,10">
        <views:DVSView />
    </Grid>
</Window>
