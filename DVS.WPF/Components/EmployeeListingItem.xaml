<UserControl x:Class="DVS.WPF.Components.EmployeeListingItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:custom="clr-namespace:DropdownMenuControl;assembly=DropdownMenuControl"
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!-- Topping Item -->
        <Border Grid.Row="0"
                TextBlock.FontSize="14"
                Background="white"
                Padding="5"
                CornerRadius="10 10 0 0"
                SnapsToDevicePixels="True">

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding Lastname}"
                           Grid.Column="0"
                           Margin="0 0 10 0" />

                <TextBlock Text="{Binding Comment}"
                           Grid.Column="1"
                           Foreground="DarkGray"
                           TextWrapping="WrapWithOverflow"/>

                <TextBlock Text="{Binding ID}"
                           Grid.Column="2"
                           Margin="10 0 0 0"
                           HorizontalAlignment="Stretch" />
            </Grid>
        </Border>

        <!-- Employee ClothesList -->
        <Grid Grid.Row="1"
              Visibility="{Binding IsExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="110" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="55" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Id" FontWeight="Bold" Padding="15 0 0 0" />
                <TextBlock Grid.Column="1" Text="Kategorie" FontWeight="Bold" />
                <TextBlock Grid.Column="2" Text="Bezeichnung" FontWeight="Bold" />
                <TextBlock Grid.Column="3" Text="Saison" FontWeight="Bold" />
                <TextBlock Grid.Column="4" Text="Größe" FontWeight="Bold" />
                <TextBlock Grid.Column="5" Text="Menge" FontWeight="Bold" />
                <TextBlock Grid.Column="6" Text="Kommentar" FontWeight="Bold" />
            </Grid>

            <!-- Data -->
            <ItemsControl Padding="15 15 15 0"
                          ItemsSource="{Binding Clothes}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="85" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding ClothesSize.Clothes.Id}" />
                            <TextBlock Grid.Column="1"  Text="{Binding ClothesSize.Clothes.Category.Name}" />
                            <TextBlock Grid.Column="2" Text="{Binding ClothesSize.Clothes.Name}" />
                            <TextBlock Grid.Column="3" Text="{Binding ClothesSize.Clothes.Season.Name}" />
                            <TextBlock Grid.Column="4" Text="{Binding ClothesSize.Size.Size}" />
                            <TextBlock Grid.Column="5" Text="{Binding Quantity}" />
                            <TextBlock Grid.Column="6" Text="{Binding Comment}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>

        <!-- Bottom Item -->
        <Border Grid.Row="2"
                TextBlock.FontSize="14"
                Background="White"
                Padding="5"
                CornerRadius="0 0 10 10"
                SnapsToDevicePixels="True">

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>

                <!-- Firstname -->
                <TextBlock Grid.Column="0"
                           Text="{Binding Firstname}"
                           HorizontalAlignment="Stretch" />

                <!-- DropDownMenu -->
                <Grid Grid.Column="1"
                      Margin="10 0 0 0">
                    <!--<Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility"
                                        Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDeleting}"
                                                 Value="True">
                                        <Setter Property="Visibility"
                                                Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <loadingspinner:LoadingSpinner Diameter="20"
                                                       IsLoading="True"
                                                       Thickness="2" />
                    </Grid>-->

                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility"
                                        Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDeleting}"
                                                 Value="False">
                                        <Setter Property="Visibility"
                                                Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <custom:DropdownMenu x:Name="dropdown">
                            <Border Background="White"
                                    BorderBrush="Gray"
                                    BorderThickness="1">
                                <StackPanel MinWidth="125">
                                    <StackPanel.Resources>
                                        <Style TargetType="Button">
                                            <Setter Property="Background"
                                                    Value="#f0f0f0" />
                                            <Setter Property="Foreground"
                                                    Value="Black" />
                                            <Setter Property="Padding"
                                                    Value="20 10" />
                                            <Setter Property="Cursor"
                                                    Value="Hand" />
                                            <EventSetter Event="Click"
                                                         Handler="Button_Click" />

                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Margin="{TemplateBinding Margin}"
                                                                Padding="{TemplateBinding Padding}"
                                                                Background="{TemplateBinding Background}">
                                                            <ContentPresenter />
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>

                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                                                                                To="#c7c7c7"
                                                                                Duration="0:0:0.1" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                                                                                To="#f0f0f0"
                                                                                Duration="0:0:0.1" />
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Resources>

                                    <Button Command="{Binding OpenEditEmployee}"
                                            Content="Bearbeiten" />
                                    <Button Command="{Binding DeleteEmployee}"
                                            Content="Löschen" />
                                    <Button Command="{Binding ClearEmpoyeeClothesList}"
                                            Content="Kleidung löschen" />
                                    <Button Command="{Binding PrintEmployee}"
                                            Content="Drucken" />
                                </StackPanel>
                            </Border>
                        </custom:DropdownMenu>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
