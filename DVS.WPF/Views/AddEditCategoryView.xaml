<UserControl x:Class="DVS.WPF.Views.AddEditCategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:components="clr-namespace:DVS.WPF.Components.Forms"
             mc:Ignorable="d">
    
    <Border Background="#FFDEDEDE">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="45" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!-- Title / Close-Button -->
            <Border Grid.Row="0" Background="#FFBFBFBF">
                <Grid>
                    <!-- Title "Kategorie" -->
                    <TextBlock Text="Kategorie"
                               FontSize="28"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="13 0 0 0" />

                    <!-- Close Button -->
                    <Button Command="{Binding CloseAddEditCategory}"
                            Style="{StaticResource TitleBarButtonStyle}"
                            HorizontalAlignment="Right"
                            Width="45">
                        <Image Source="/Resources/Images/Close.png"
                               Height="20"
                               Width="20"
                               HorizontalAlignment="Center" />
                    </Button>
                </Grid>
            </Border>

            <!-- AddEditCategoryForm -->
            <components:AddEditCategoryForm Grid.Row="1"
                                            Margin="15 10 15 15"/>
        </Grid>
    </Border>
</UserControl>
