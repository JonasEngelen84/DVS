<UserControl x:Class="DVS.WPF.Views.DVSHeadView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:components="clr-namespace:DVS.WPF.Components.DVSListings"
             mc:Ignorable="d"
             DataContext="{Binding DVSHeadViewModel}">
    
    <Grid Cursor="Hand">
        <Grid.RowDefinitions>
            <RowDefinition Height="27"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--Button-->
        <Grid Grid.Row="0">
            
            <!--AddEmployee-->
            <Button HorizontalAlignment="Left"
                    Style="{StaticResource HeadViewButtonStyle}"
                    Command="{Binding OpenAddEmployee}"
                    Cursor="Hand">
                <Image Source="/Resources/Images/Add Employee.png"
                       HorizontalAlignment="Center" />
            </Button>

            <!-- Employee Search -->
            <Border Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Width="200"
                    Height="25"
                    HorizontalAlignment="Left"
                    Margin="30 0 0 3"
                    CornerRadius="5"
                    Cursor="Arrow">

                <Grid>
                    <!-- Lupe links -->
                    <Image Source="/Resources/Images/Search.png"
                           Width="16"
                           Height="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="3,1,0,0"
                           Cursor="Arrow" />

                    <TextBox x:Name="SearchEmployeeTextBox"
                             Width="155"
                             Height="20"
                             HorizontalAlignment="Left"
                             Margin="20 2 0 3"
                             Padding="5,0,5,0"
                             BorderThickness="0"
                             FontSize="14" />

                    <!-- X rechts zum Löschen -->
                    <Button Content="✖"
                            Width="20"
                            Height="20"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,0,5,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Arrow"
                            Click="ClearEmployeeSearchButton_Click" />
                </Grid>
            </Border>

            <!-- Clothes Search -->
            <Border Background="White"
                    BorderBrush="Gray"
                    BorderThickness="1"
                    Width="200"
                    Height="25"
                    HorizontalAlignment="Right"
                    Margin="0 0 30 3"
                    CornerRadius="5"
                    Cursor="Arrow">

                <Grid>
                    <!-- Lupe links -->
                    <Image Source="/Resources/Images/Search.png"
                           Width="16"
                           Height="16"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="3,1,0,0"
                           Cursor="Arrow" />

                    <TextBox x:Name="SearchClothesTextBox"
                             Width="155"
                             Height="20"
                             HorizontalAlignment="Left"
                             Margin="20 2 0 3"
                             Padding="5,0,5,0"
                             BorderThickness="0"
                             FontSize="14" />

                    <!-- X rechts zum Löschen -->
                    <Button Content="✖"
                            Width="20"
                            Height="20"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Margin="0,0,5,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Arrow"
                            Click="ClearClothesSearchButton_Click" />
                </Grid>
            </Border>

            <!--AddClothes-->
            <Button HorizontalAlignment="Right"
                    Style="{StaticResource HeadViewButtonStyle}"
                    Command="{Binding OpenAddClothes}"
                    Cursor="Hand">
                <Image Source="/Resources/Images/Add Shirt.png"
                       HorizontalAlignment="Center" />
            </Button>
        </Grid>

        <!--Components/GridSplitter-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <!-- component:DVSEmployeeListing -->
            <components:DVSEmployeeListing x:Name="DVSEmployeeListing"
                                           Grid.Column="0" />

            <!-- GridSplitter -->
            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Center"
                          Width="5"
                          Margin="0,0,0,0"
                          Cursor="SizeWE"
                          Background="#91969e">
            </GridSplitter>

            <!-- component:DVSClothesListing -->
            <components:DVSClothesListing x:Name="DVSClothesListing"
                                          Grid.Column="2" />
        </Grid>
    </Grid>
</UserControl>
